<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="150dp">

          <RelativeLayout
              android:layout_width="210dp"
              android:layout_height="150dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Company:"
                   android:textStyle="bold"
                   android:id="@+id/comp"
                   android:layout_marginLeft="10dp"
                   android:textSize="20dp"
                   android:textColor="@color/black"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/comp"
                   android:id="@+id/comptext"
                   android:layout_marginLeft="10dp"
                   android:textSize="17dp"
                   android:text="xyz"
                   android:textColor="@color/purple_500"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/comptext"
                   android:text="title:"
                   android:textSize="20dp"
                   android:id="@+id/title"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="15dp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/titletext"
                   android:layout_below="@id/title"
                   android:textColor="@color/purple_500"
                   android:text="this is the best company in the world."
                   android:layout_marginLeft="10dp"
                   />

          </RelativeLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="last date:"
              android:id="@+id/lastdate"
              android:layout_marginLeft="230dp"
              android:textSize="20dp"
              android:textStyle="bold"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/lastdate"
              android:id="@+id/lastdatehint"
              android:hint="dd/mm/yyyy"
              android:textColorHint="@color/purple_500"
              android:textColor="@color/purple_500"
              android:textSize="15dp"
              android:layout_marginLeft="230dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Branch:"
              android:id="@+id/branch"
              android:layout_below="@id/lastdatehint"
              android:layout_marginLeft="230dp"
              android:layout_marginTop="15dp"
              android:textStyle="bold"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="this is th dnje.efbk rfmf gfdngjdz"
              android:textSize="17dp"
              android:id="@+id/branchhint"
              android:layout_below="@id/branch"
              android:layout_marginLeft="230dp"
              android:textColor="@color/purple_500"/>

     </RelativeLayout>

</RelativeLayout>